extends layout

block content
  link(rel="stylesheet", href="/assets/css/login.css")

  // Main Registration Form
  main
      .form
        h1.heading Login
        form(action="/login" method="POST")
          input.email(type="email" name="email" placeholder="E-mail" required /)
          input.password(type="password" name="password" placeholder="Password" required /)
          button.submit-btn(type="submit") Log in
        a.link(href="/register") Don't have an account? Register one

  // Footer Section
  
  // Include scripts here
  script(src="./assets/js/header.js")
  script(src="./assets/js/footer.js")
  script(src="./routes/login.js")



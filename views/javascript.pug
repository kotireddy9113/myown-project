        code.
          // JavaScript Program to Find the Factorial of a Number
          
          function factorial(n) {
              if (n === 0) return 1;
              return n * factorial(n - 1);
          }

          const num = 5;
          console.log(`Factorial of ${num} is ${factorial(num)}`);

